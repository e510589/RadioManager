<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_chat_ack"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/checked" />

    <TextView
        android:id="@+id/tv_tx_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/imv_chat_ack"
        android:background="@drawable/background_msgitem_send"
        android:maxEms="15"
        android:padding="10dp"
        android:text="@string/msg_sampl"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tx_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_tx_msg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_clock"
        android:text="@string/msg_time_sample"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

</RelativeLayout>