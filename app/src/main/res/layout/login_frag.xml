<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="123dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/logo2"></ImageView>

    <TextView
        android:id="@+id/tv_login_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_logo"
        android:layout_centerInParent="true"
        android:text="Wake up Neo..."
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <RelativeLayout
        android:id="@+id/rl_password_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login_msg"
        android:layout_centerHorizontal="true"
        android:background="#000000">


        <EditText
            android:id="@+id/edt_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="**********"
            android:inputType="textPassword"
            android:maxLength="10"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="34dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/edt_password"
            android:background="@drawable/btn_login" />


    </RelativeLayout>


    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pgb_login"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:max="100"
        android:progress="100"
        android:visibility="visible">

    </androidx.core.widget.ContentLoadingProgressBar>

    <TextView
        android:id="@+id/tv_procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pgb_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Write Channel Info"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"></TextView>

</RelativeLayout>